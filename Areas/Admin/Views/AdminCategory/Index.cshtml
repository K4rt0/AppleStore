@model IEnumerable<AppleStore.Category>

@{
    ViewData["Title"] = "Category List";
    int id = 0;
}

<div class="form-floating">
    <h5 class="card-title fw-semibold mb-4 d-inline-block">DANH SÁCH DANH MỤC</h5>
    <a asp-area="Admin" asp-controller="AdminCategory" asp-action="Create" class="btn btn-light border shadow float-end"><i class="ti ti-plus"></i></a>
</div>
<div class="table-responsive">
    <table class="table text-nowrap mb-0 align-middle">
        <thead class="text-dark fs-4">
            <tr>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">#</h6>
                </th>
                <th class="border-bottom-0">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="border-bottom-0">
                    Amount Products
                </th>
                <th class="border-bottom-0">
                    @Html.DisplayNameFor(model => model.Display)
                </th><th class="border-bottom-0"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                id++;
                <tr>
                    <td class="border-bottom-0"><h6 class="fw-semibold mb-0">@id</h6></td>
                    <td class="border-bottom-0">
                        <h6 class="fw-semibold mb-1">@item.Name</h6>
                        @* <span class="fw-normal">Web Designer</span> *@
                    </td>
                    <td class="border-bottom-0">
                        <p class="mb-0 fw-normal">@item.Products.Count()</p>
                    </td>
                    <td class="border-bottom-0">
                        <div class="d-flex align-items-center gap-2">
                            @if(item.Display)
                            {
                                <span class="badge bg-primary rounded-3 fw-semibold">Showed</span>
                            }
                            else
                            {
                                <span class="badge bg-danger rounded-3 fw-semibold">Hide</span>
                            }
                        </div>
                    </td>
                    <td class="border-bottom-0">
                        <div class="dropdown">
                            <button type="button" class="btn border-0 p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                <form asp-action="DeleteConfirmed" asp-route-id="@item.Id">
                                    <button type="submit" class="btn dropdown-item"><i class="bx bx-trash me-1"></i>Delete</button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>