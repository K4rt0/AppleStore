@model IEnumerable<AppleStore.Models.Entities.ProductAttributeValue>

@{
    ViewData["Title"] = "Product Attribute List";
    int id = 0;

    ViewData["DeleteModalAction"] = "DeleteValueConfirmed";
    ViewData["DeleteModalText"] = "Bạn có chắc muốn xoá giá trị thuộc tính này hay không?";
}

<div class="form-floating">
    <h5 class="card-title fw-semibold mb-4 d-inline-block">DANH SÁCH GIÁ TRỊ THUỘC TÍNH - <span class="text-uppercase">@ViewBag.AttributeName</span></h5>
    <a asp-action="Index" class="btn btn-light-warning border shadow float-end ms-2"><i class="ti ti-back-left"></i></a>
    <a asp-action="CreateValue" asp-route-id="@ViewBag.AttributeId" class="btn btn-light border shadow float-end"><i class="ti ti-plus"></i></a>
</div>
<div class="table-responsive">
    <table class="table text-nowrap mb-0 align-middle">
        <thead class="text-dark fs-4 vertical-">
            <tr>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">#</h6>
                </th>
                <th class="border-bottom-0">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="border-bottom-0">
                    @Html.DisplayNameFor(model => model.Value)
                </th>
                <th class="border-bottom-0"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                id++;
                <tr>
                    <td class="border-bottom-0"><h6 class="fw-semibold mb-0">@id</h6></td>
                    <td class="border-bottom-0">
                        <h6 class="fw-semibold mb-1">@item.Name</h6>
                    </td>
                    <td class="border-bottom-0">
                        <h6 class="fw-semibold mb-1">@item.Value</h6>
                    </td>
                    <td class="border-bottom-0">
                        <div class="dropdown">
                            <button type="button" class="btn border-0 p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-action="EditValue" asp-route-id="@item.Id"><i class="ti ti-pencil me-1"></i> Edit</a>
                                <button type="submit" class="btn dropdown-item deleteButton" data-item-id="@item.Id" data-bs-toggle="modal" data-bs-target="#deleteItemModal"><i class="ti ti-trash me-1"></i> Delete</button>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>