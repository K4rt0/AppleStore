@model IEnumerable<AppleStore.Product>

@{
    ViewData["Title"] = "Product List";
    int id = 0;
}

<div class="form-floating">
    <h5 class="card-title fw-semibold mb-4 d-inline-block">DANH SÁCH SẢN PHẨM</h5>
    <a asp-area="Admin" asp-controller="AdminProduct" asp-action="Create" class="btn btn-light border shadow float-end"><i class="ti ti-plus"></i></a>
</div>
<div class="table-responsive text-nowrap">
    <table class="table table-hover">
        <thead class="text-dark fs-4">
            <tr>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">#</h6>
                </th>
                <th class="border-bottom-0">
                    @Html.DisplayNameFor(model => model.Avatar)
                </th>
                <th class="border-bottom-0">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="border-bottom-0">
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th class="border-bottom-0">
                    Số lượng
                </th>
                <th class="border-bottom-0">
                    @Html.DisplayNameFor(model => model.Display)
                </th>
                <th class="border-bottom-0"></th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach(var item in Model)
            {
                id++;
                <tr>
                    <td class="border-bottom-0"><h6 class="fw-semibold mb-0">@id</h6></td>
                    <td class="border-bottom-0">
                        <img src="@item.Avatar" style="max-width:100px" alt="" />
                    </td>
                    <td class="border-bottom-0">
                        <p class="mb-0 fw-normal">@item.Name</p>
                    </td>
                    <td class="border-bottom-0">
                        <p class="mb-0 fw-normal">@item.Category?.Name</p>
                    </td>
                    <td class="border-bottom-0">
                        @{
                            int qty = 0;
                            @if (item.ProductVariants != null)
                            {
                                @foreach (var variant in item.ProductVariants)
                                {
                                    <p class="mb-0 fw-normal">@variant.Quantity</p>
                                }
                            }
                        }
                        @qty
                    </td>
                    <td class="border-bottom-0">
                        <div>
                            @if (item.Display)
                            {
                                <span class="badge bg-primary rounded-3 fw-semibold">Showed</span>
                            }
                            else
                            {
                                <span class="badge bg-danger rounded-3 fw-semibold">Hide</span>
                            }
                        </div>
                    </td>
                    <td class="border-bottom-0">
                        <div class="dropdown">
                            <button type="button" class="btn border-0 p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id"><i class="ti ti-pencil me-1"></i> Edit</a>
                                <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id"><i class="ti ti-eye me-1"></i> Details</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
     th, td {
         display: table-cell;
        vertical-align: middle;
        text-align: center;
    }
</style>