                @* News On Top *@
                <li class="nav-small-cap">
                    <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                    <span class="hide-menu">Tin nổi bật</span>
                </li>
                <li class="sidebar-item">
                    <a asp-area="Admin" asp-controller="AdminNewsOnTop" asp-action="Create" class="sidebar-link"
                        aria-expanded="false">
                        <span>
                            <i class="ti ti-plus"></i>
                        </span>
                        <span class="hide-menu">Thêm mới</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-area="Admin" asp-controller="AdminNewsOnTop" asp-action="Index" class="sidebar-link"
