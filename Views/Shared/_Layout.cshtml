@inject AppleStore.Repositories.ICategoryRepository categoryReposotiry

@{
    var categories = await categoryReposotiry.GetAllAsync();
}

<!DOCTYPE html>
<html class="no-js" lang="zxx">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>SmartShopping - @ViewData["Title"]</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" type="image/x-icon" href="~/Logo.png" />

    <!-- ========================= CSS here ========================= -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LineIcons.3.0.css" />
    <link rel="stylesheet" href="~/css/tiny-slider.css" />
    <link rel="stylesheet" href="~/css/glightbox.min.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@200;300;400;500;600;700;800&display=swap">

</head>

<body>
    <!-- Preloader -->
    <div class="preloader">
        <div class="preloader-inner">
            <div class="preloader-icon">
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- /End Preloader -->
    <!-- Start Header Area -->
    <header class="header navbar-area">
        <!-- Start Header Middle -->
        <div class="header-middle">
            <div class="container">
                <div class="row align-items-center justify-content-between">
                    <div class="col-lg-3 col-md-3 col-4">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="~/Logo-Horizontal.png" alt="Logo">
                        </a>
                    </div>

                    <div class="col-lg-6 col-md-6 col-4">
                        <nav class="navbar navbar-expand-lg">
                            <button class="navbar-toggler mobile-menu-btn" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse sub-menu-bar" style="width: 220px;"
                                id="navbarSupportedContent">
                                <ul id="nav" class="navbar-nav ms-auto">
                                    @foreach (var item in categories)
                                    {
                                        <li class="nav-item">
                                            <a asp-area="" asp-controller="Products" asp-action="Index"
                                                asp-route-CategoryIdShow="@item.Id"
                                                aria-label="Toggle navigation">@item.Name</a>
                                        </li>
                                    }
                                    <li class="nav-item">
                                        <a asp-area="" asp-controller="Home" asp-action="Index"
                                            aria-label="Toggle navigation">Liên hệ</a>
                                    </li>
                                </ul>

                            </div> <!-- navbar collapse -->
                        </nav>
                    </div>
                    <div class="col-lg-3 col-md-3 col-4 text-end">
                        <div class="middle-right-area float-end">
                            <div class="navbar-cart">
                                <div class="wishlist">
                                    <a href="javascript:void(0)">
                                        <i class="lni lni-heart"></i>
                                        <span class="total-items">0</span>
                                    </a>
                                </div>
                                <div class="cart-items me-3">
                                    <a href="javascript:void(0)" class="main-btn">
                                        <i class="lni lni-cart"></i>
                                        <span class="total-items total-item">0</span>
                                    </a>
                                    <!-- Shopping Item -->
                                    <div class="shopping-item" style="width: 350px;">
                                        <div class="dropdown-cart-header d-flex justify-content-between">
                                            <span style="text-transform: none !important;">0 sản phẩm</span>
                                        </div>
                                        <ul class="shopping-list  text-start" id="Cart"
                                            style="max-height: 350px; overflow-y: auto;"></ul>
                                        <div class="bottom">
                                            <div class="total">
                                                <span>Tổng</span>
                                                <span class="total-amount total-amounts"
                                                    style="font-weight: 700; color: #0167F3;">0đ</span>
                                            </div>
                                            <div class="button">
                                                <a asp-controller="Cart" asp-action="Index" class="btn animate">
                                                    Xem giỏ
                                                    hàng
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/ End Shopping Item -->
                                </div>
                                <partial name="_LoginPartial" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Header Middle -->
    </header>
    <!-- End Header Area -->
    @RenderBody()

    <!-- Start Footer Area -->
    <footer class="footer">
        <!-- Start Footer Top -->
        <div class="footer-top">
            <div class="container">
                <div class="inner-content">
                    <div class="row">
                        <div class="col-lg-3 col-md-4 col-12">
                            <div class="footer-logo">
                                <a href="#">
                                    <img src="~/Logo-Horizontal.png" alt="#">
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-9 col-md-8 col-12">
                            <div class="footer-newsletter">
                                <h4 class="title">
                                    Đăng ký thông báo mới
                                    <span>Nhận tất cả các thông tin mới nhất, giảm giá,...</span>
                                </h4>
                                <div class="newsletter-form-head">
                                    <div class="newsletter-form">
                                        <input id="email-sub" name="EMAIL" placeholder="email@example.com" type="email">
                                        <div class="button">
                                            <button id="btn-email" class="btn">Đăng ký<span class="dir-part"></span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Footer Top -->
            <!-- Start Footer Middle -->
            <div class="footer-middle">
                <div class="container">
                    <div class="bottom-inner">
                        <div class="row">
                            <div class="col-lg-4 col-md-12 col-12">
                                <!-- Single Widget -->
                                <div class="single-footer f-link">
                                    <h3>Thông tin thêm</h3>
                                    <ul>
                                        <li><a href="javascript:void(0)">Về chúng tôi</a></li>
                                        <li><a href="javascript:void(0)">Liên hệ chúng tôi</a></li>
                                        <li><a href="javascript:void(0)">Điểm đến cửa hàng</a></li>
                                        <li><a href="javascript:void(0)">Câu hỏi liên quan</a></li>
                                    </ul>
                                </div>
                                <!-- End Single Widget -->
                            </div>
                            <div class="col-lg-4 col-md-12 col-12">
                                <!-- Single Widget -->
                                <div class="single-footer f-link">
                                    <h3>Danh mục</h3>
                                    <ul>
                                        @foreach (var item in categories)
                                        {
                                            <li class="nav-item">
                                                <a asp-area="" asp-controller="Products" asp-action="Index"
                                                    asp-route-CategoryIdShow="@item.Id">@item.Name</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                                <!-- End Single Widget -->
                            </div>
                            <div class="col-lg-4 col-md-12 col-12">
                                <!-- Single Widget -->
                                <div class="single-footer our-app">
                                    <h3>Ứng dụng</h3>
                                    <ul class="app-btn">
                                        <li style="width: 210px">
                                            <a href="javascript:void(0)">
                                                <i class="lni lni-apple"></i>
                                                <span class="small-title">Tải về tại cửa hàng</span>
                                                <span class="big-title">App Store</span>
                                            </a>
                                        </li>
                                        <li style="width: 210px">
                                            <a href="javascript:void(0)">
                                                <i class="lni lni-play-store"></i>
                                                <span class="small-title">Tải về tại cửa hàng</span>
                                                <span class="big-title">Google Play</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <!-- End Single Widget -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Footer Middle -->
            <!-- Start Footer Bottom -->
            <div class="footer-bottom">
                <div class="container">
                    <div class="inner-content">
                        <div class="row align-items-center">
                            <div class="col-lg-4 col-12">
                                <div class="payment-gateway">
                                    <img src="~/images/footer/credit-cards-footer.png" alt="#">
                                </div>
                            </div>
                            <div class="col-lg-4 col-12">
                                <div class="copyright">
                                    <p></p>
                                </div>
                            </div>
                            <div class="col-lg-4 col-12">
                                <ul class="socila">
                                    <li>
                                        <span>Mạng xã hội:</span>
                                    </li>
                                    <li><a href="javascript:void(0)"><i class="lni lni-facebook-filled"></i></a></li>
                                    <li><a href="javascript:void(0)"><i class="lni lni-twitter-original"></i></a></li>
                                    <li><a href="javascript:void(0)"><i class="lni lni-instagram"></i></a></li>
                                    <li><a href="javascript:void(0)"><i class="lni lni-google"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Footer Bottom -->
    </footer>
    <!--/ End Footer Area -->
    <!-- ========================= scroll-top ========================= -->
    <a href="#" class="scroll-top">
        <i class="lni lni-chevron-up"></i>
    </a>

    <!-- ========================= JS here ========================= -->
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/tiny-slider.js"></script>
    <script src="~/js/glightbox.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/jquery-3.7.1.min.js"></script>
    @await Component.InvokeAsync("Notyf")
    <script type="text/javascript">
        //========= Hero Slider
        tns({
            container: '.hero-slider',
            slideBy: 'page',
            autoplay: true,
            autoplayButtonOutput: false,
            mouseDrag: true,
            gutter: 0,
            items: 1,
            nav: false,
            controls: true,
            controlsText: ['<i class="lni lni-chevron-left"></i>', '<i class="lni lni-chevron-right"></i>'],
        });

        //======== Brand Slider
        tns({
            container: '.brands-logo-carousel',
            autoplay: true,
            autoplayButtonOutput: false,
            mouseDrag: true,
            gutter: 15,
            nav: false,
            controls: false,
            responsive: {
                0: {
                    items: 1,
                },
                540: {
                    items: 3,
                },
                768: {
                    items: 5,
                },
                992: {
                    items: 6,
                }
            }
        });
    </script>
    <script>
        $(document).ready(function () {
            loadCart();
            $('#btn-email').on('click', function () {
                var email = $('#email-sub').val();
                if (email == '') {
                    notyf.error('Vui lòng nhập email !');
                }
                else {
                    notyf.success('Đăng ký thành công, kiểm tra email để nhận thông tin !');
                }
            });
        });
        function loadCart() {
            $.ajax({
                url: '/Cart/GetCartItems',
                type: 'GET',
                success: function (response) {

                    let data = response.cartItemsList;

                    let cartHTML = '';
                    let totalItem = 0;
                    let totalAmounts = 0;

                    data.forEach(item => {
                        const avatar = item.avatar ? `/images/products/${item.avatar}` : `/images/default-avatar.png`;
                        const id = item.productId;
                        cartHTML +=
                            `<li>
                                <div class="cart-img-head">
                                    <a class="cart-img" href="/Products/Details/${id}">
                                        <img src="${avatar}" alt="#">
                                    </a>
                                </div>
                                <div class="content">
                                    <h4>
                                        <a href="/Products/Details/${id}" class="d-flex justify-content-start">${item.name}</a>
                                        ${item.color ? `<p class="text-muted" style="font-size: 13px;">Màu: ${item.color}</p>` : ''}
                                        ${item.storage ? `<p class="text-muted" style="font-size: 13px;">Dung lượng: ${item.storage}</p>` : ''}
                                    </h4>
                                    <p class="quantity d-flex justify-content-start" style="font-weight: 700;">
                                        <span class="amount" style="color: #0167F3;">
                                            ${item.price.toLocaleString('vi-VN')}đ
                                        </span>
                                        <span style="margin: 0 4px; color: #757575;">x</span> ${item.cartProductQuantity}</span>
                                    </p>
                                </div>
                            </li>`;
                        totalItem += item.cartProductQuantity;
                        totalAmounts += item.cartProductQuantity * item.price;
                    });

                    $('#Cart').html(cartHTML);
                    $('.total-item').text(totalItem);
                    $('.dropdown-cart-header span').first().text(`${totalItem} sản phẩm`);
                    $('.total-amounts').text(`${totalAmounts.toLocaleString('vi-VN')}đ`);
                },
                error: function (error) {
                    console.log('Error:', error);
                }
            });
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>