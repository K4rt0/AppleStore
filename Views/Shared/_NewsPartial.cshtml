@{
    var newsOnTops = (List<NewsOnTop>?)ViewData["newsOnTops"];
    var product = (Product)ViewBag.NewProduct;
}

<section class="hero-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-12 custom-padding-right">
                <div class="slider-head">
                    <!-- Start Hero Slider -->
                    <div class="hero-slider">
                        <!-- Start Single Slider -->
                        @if (newsOnTops != null)
                        {
                            @foreach (var item in newsOnTops)
                            {
                                <div class="single-slider" style="background-image: url('./images/news/poster.png');">
                                    <div class="content p-5">
                                        <div class="row">
                                            <div class="col-lg-7">
                                                <h2>
                                                    <span>@item.SubHeader</span>
                                                    @item.Header
                                                </h2>
                                                <p>
                                                    @item.Content
                                                </p>
                                                <h3><span>Giá tiền</span>@($"{item.Price:#,##0}đ")</h3>
                                                <div class="button">
                                                    <a asp-action="Index" class="btn">Shop Now</a>
                                                </div>
                                            </div>
                                            <div class="col mt-3 d-flex justify-content-center">
                                                <img style="right: 0;" src="~/images/news/@item.Image" width="300px" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="single-slider" style="background-image: url('./images/news/poster.png');">
                                <div class="content p-5">
                                    <div class="row">
                                        <div class="col-lg-7">
                                            <h2>
                                                <span>Không xác định</span>
                                                Không xác định
                                            </h2>
                                            <p>
                                                Chưa có tin nổi bật nào được tạo.
                                            </p>
                                            <h3><span>Giá tiền</span> Không xác định</h3>
                                            <div class="button">
                                                <a asp-action="Index" class="btn">Shop Now</a>
                                            </div>
                                        </div>
                                        <div class="col mt-3 d-flex justify-content-center">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <!-- End Hero Slider -->
                </div>
            </div>
            <div class="col-lg-4 col-12">
                <div class="row">
                    <div class="col-lg-12 col-md-6 col-12 md-custom-padding">
                        <!-- Start Small Banner -->
                        <div class="hero-small-banner" style="background-image: url('./images/news/poster.png');">
                            @if(product != null) {
                                <img class="position-absolute" style="bottom: 0; right: 0; margin-bottom: -15px;" src="~/images/products/@product.Avatar" width="50%" />
                            
                            <div class="content">
                                <div class="col-lg-10 col-md-7 col-sm-10 col-xs-5">
                                    <h2>
                                        <span>New line required</span>
                                        @product.Name
                                    </h2>
                                    <h3>@ViewBag.Price</h3>
                                </div>
                                <div class="col">
                                </div>
                            </div>
                            }
                        </div>
                        <!-- End Small Banner -->
                    </div>
                    <div class="col-lg-12 col-md-6 col-12">
                        <!-- Start Small Banner -->
                        <div class="hero-small-banner style2">
                            <div class="content">
                                <h2>Weekly Sale!</h2>
                                <p>Saving up to 50% off all online store items this week.</p>
                                <div class="button">
                                    <a class="btn" href="product-grids.html">Shop Now</a>
                                </div>
                            </div>
                        </div>
                        <!-- Start Small Banner -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>