@model AppleStore.Models.Entities.ShoppingCart

@{
    ViewData["Title"] = "Giỏ hàng";
    int total = 0;
}

<!-- Start Breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Cart</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li><a href="index-2.html"><i class="lni lni-home"></i> Home</a></li>
                    <li><a href="index-2.html">Shop</a></li>
                    <li>Cart</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumbs -->
<!-- Shopping Cart -->
<div class="shopping-cart section">
    <div class="container">
        @if(Model.Items.Count == 0)
        {
            <h1>Giỏ hàng trống!</h1>
        }
        else 
        {
            <div class="cart-list-head">
                <!-- Cart List Title -->
                <div class="cart-list-title">
                    <div class="row">
                        <div class="col-lg-1 col-md-1 col-12">
                        </div>
                        <div class="col-lg-4 col-md-3 col-12">
                            <p>Tên sản phẩm</p>
                        </div>
                        <div class="col-lg-2 col-md-2 col-12">
                            <p>Số lượng</p>
                        </div>
                        <div class="col-lg-2 col-md-2 col-12">
                            <p>Tổng giá</p>
                        </div>
                        <div class="col-lg-2 col-md-2 col-12">
                            <p>Giảm giá</p>
                        </div>
                        <div class="col-lg-1 col-md-2 col-12">
                            <p>Xóa</p>
                        </div>
                    </div>
                </div>
                <!-- End Cart List Title -->
                <!-- Cart Single List list -->
                @foreach (var item in Model.Items)
                {
                    <div class="cart-single-list">
                        <div class="row align-items-center">
                            <div class="col-lg-1 col-md-1 col-12">
                                <a href="product-details.html"><img src="~/images/products/@item.ProductVariant?.Product?.Avatar" alt="#"></a>
                            </div>
                            <div class="col-lg-4 col-md-3 col-12">
                                <h5 class="product-name">
                                    <a href="product-details.html">
                                        @item.ProductVariant?.Product?.Name
                                    </a>
                                </h5>
                                <p class="product-des">
                                    <span><em>Loại:</em> @item.ProductVariant?.Product?.Category?.Name</span>
                                    <span><em>Màu:</em> @item.ProductVariant </span>
                                    <span><em>Dung lượng:</em></span>
                                </p>
                            </div>
                            <div class="col-lg-2 col-md-2 col-12">
                                <div class="count-input">
                                    <input type="number" class="quantity-input" data-productVariantId="@item.ProductVariant?.Id" name="name" value="@item.CartProductQuantity" min="1" max="@item.ProductVariant?.Quantity" />
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-2 col-12">
                                <p id="item-total-@item.ProductVariant?.Id">@($"{item.ProductVariant?.Price * item.CartProductQuantity:#,##0} đ")</p>
                            </div>
                            <div class="col-lg-2 col-md-2 col-12">
                                <p>@($"{item.ProductVariant?.Product?.Discount?.Price:#,##0} đ")</p>
                            </div>
                            <div class="col-lg-1 col-md-2 col-12">
                                <a style="cursor: pointer;" class="remove-item removeFromCartBtn" data-productVariantId="@item.ProductVariant?.Id"><i class="lni lni-close"></i></a>
                            </div>
                        </div>
                    </div>
                }
                <!-- End Single List list -->
            </div>
            <div class="row">
                <div class="col-12">
                    <!-- Total Amount -->
                    <div class="total-amount">
                        <div class="row">
                            <div class="col-lg-8 col-md-6 col-12">
                                <div class="left">
                                    <div class="coupon">
                                        <form action="#" target="_blank">
                                            <input name="Coupon" placeholder="Enter Your Coupon">
                                            <div class="button">
                                                <button class="btn">Apply Coupon</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 col-12">
                                <div class="right">
                                    <ul>
                                        <li id="cart-total-price">Cart Subtotal<span>@($"{Model.Items.Sum(s => s.CartProductQuantity * s.ProductVariant?.Price):#,##0} đ")</span></li>
                                        <li>Shipping<span>Free</span></li>
                                        <li>You Save<span>$29.00</span></li>
                                        <li class="last">You Pay<span>$2531.00</span></li>
                                    </ul>
                                    <div class="button">
                                        <a href="checkout.html" class="btn">Checkout</a>
                                        <a asp-controller="Products" asp-action="Index" class="btn btn-alt">Continue shopping</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--/ End Total Amount -->
                </div>
            </div>
        }
    </div>
</div>
<!--/ End Shopping Cart -->
    
<style>
    input[type='number'] {
        width: 70px;
        text-align: center;
    }
</style>